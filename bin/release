#! /usr/bin/env bash
BIN_DIR=$(cd $(dirname $0); pwd) # absolute path
BUILD_DIR=$1
$BIN_DIR/../python-bin/detect $BUILD_DIR $null > /dev/null
$pr = $?
$BIN_DIR/../ruby-bin/detect $BUILD_DIR $null > /dev/null
$rr = $?
if [ $pr -eq 0 ]; then
    ../python-bin/release $BUILD_DIR
fi
if [ $rr -eq 0 ]; then
    ../ruby-bin/release $BUILD_DIR
fi
